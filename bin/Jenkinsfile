pipeline {
    agent any
    stages {
		stage('Initialize'){
			steps{
				echo "Running build #${env.BUILD_ID} on Jenkins ${env.JENKINS_URL}"
			}
		}
		stage('Checkout'){
			steps{
					echo 'Checkout git. >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>'
				    git branch: 'main', url: 'https://git.epam.com/vanshraj_singh/training-tasks.git'
			}
		}
        stage('Build') {
            steps {
                 echo "building >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
				 bat label: '', script: 'mvn package'
    			 echo "build success. >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
            }
        }
        stage('Artifact'){
			steps{
				echo 'Preserving build....>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>'
				archiveArtifacts artifacts: '/target/*.jar'
     			echo "artifact preserved >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>"
			}
		}
    }
    post{
			always{
				echo 'Pipeline finished.'
				step([$class: 'JUnitResultArchiver', checksName: '', testResults: 'target/surefire-reports/junitreports/TEST-*.xml'])
			}
		}
}